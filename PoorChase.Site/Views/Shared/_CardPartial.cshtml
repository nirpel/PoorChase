@model Product
@{
    var fileName = System.IO.Path.GetFileName(Model.PicturePath1) ?? "no-img.png";
}
<div class="card card-size card-bg shadow">
    <div class="d-flex justify-content-center mt-3">
        <img class="card-img-top card-image-size rounded border border-dark bg-light" src="~/images/products/@fileName" alt="@Model.Title">
    </div>
    <div class="card-body">
        <h5 class="card-title d-flex justify-content-center">@Model.Title</h5>
        <div class="d-flex justify-content-center mt-3">
            <p class="card-text text-center">@Model.ShortDescription</p>
        </div>
    </div>
    <div class="d-flex justify-content-center mb-2">
        <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link mr-2">Details</a>
        <form method="post" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-link ml-2">Add to Cart</button>
        </form>
    </div>
    <div class="card-footer d-flex justify-content-between site-bg">
        <span class="text-muted">@Model.Date.ToShortDateString()</span>
        <span>$@Model.Price.ToString("0.00")</span>
    </div>
</div>
