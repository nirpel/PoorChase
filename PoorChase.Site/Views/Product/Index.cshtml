@model ProductViewModel
@{
    ViewData["Title"] = "Publish";
    ViewData["MasterType"] = "List A Product";
}
<form enctype="multipart/form-data" method="post" asp-controller="Product" asp-action="Publish">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title" class="text-danger"></span>
            <input asp-for="Title" type="text" class="form-control shadow" placeholder="Title" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">Short Description</label>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
        <input asp-for="ShortDescription" type="text" class="form-control shadow" placeholder="Short Description" />
    </div>
    <div class="form-group">
        <label asp-for="LongDescription">Long Description</label>
        <span asp-validation-for="LongDescription" class="text-danger"></span>
        <textarea asp-for="LongDescription" class="form-control shadow" placeholder="Long Description" rows="6"></textarea>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Price">Price ($)</label>
            <span asp-validation-for="Price" class="text-danger"></span>
            <input asp-for="Price" type="number" class="form-control shadow" placeholder="Price" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Picture1">Image 1</label>
            <input asp-for="Picture1" type="file" class="form-control-file" />
        </div>
        <div class="form-group col">
            <label asp-for="Picture2">Image 2</label>
            <input asp-for="Picture2" type="file" class="form-control-file" />
        </div>
        <div class="form-group col">
            <label asp-for="Picture3">Image 3</label>
            <input asp-for="Picture3" type="file" class="form-control-file" />
        </div>
    </div>
    <button asp-page-handler="Publish" class="btn btn-secondary shadow" type="submit">Post</button>
</form>
@{
    var partialModel = new ModalViewModel
    {
        Title = "Great!",
        Content = $"Your Product has been published successfully!"
    };
}
@if (TempData["PopUp"] != null)
{
    <partial name="_ModalPartial" model="@partialModel" />
}
